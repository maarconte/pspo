rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // Helper Functions
    // ========================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }

    function isDev() {
      return hasRole('dev');
    }

    function isAdmin() {
      return hasRole('admin') || isDev();
    }

    function isClient() {
      return hasRole('client') || isAdmin();
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ========================================
    // Collections Rules
    // ========================================

    // Collection users
    match /users/{userId} {
      // Lecture : l'utilisateur peut lire son propre profil, les devs peuvent tout lire
      allow read: if isOwner(userId) || isDev();

      // Création : automatique via Cloud Function
      allow create: if false;

      // Mise à jour : seuls les devs peuvent modifier (via Cloud Function)
      allow update: if isDev();

      // Suppression : seuls les devs
      allow delete: if isDev();

      // Sessions de quiz de l'utilisateur
      match /quizSessions/{sessionId} {
        // L'utilisateur peut lire/écrire ses propres sessions
        allow read, write: if isOwner(userId);

        // Les devs peuvent tout voir
        allow read: if isDev();
      }

      // Statistiques de l'utilisateur
      match /statistics/{docId} {
        // L'utilisateur peut lire/écrire ses propres stats
        allow read, write: if isOwner(userId);

        // Les devs peuvent tout voir
        allow read: if isDev();
      }
    }

    // Collection questions
    match /questions/{questionId} {
      // Lecture : tout le monde peut lire (pour le quiz)
      allow read: if true;

      // Création, modification, suppression : admin et dev uniquement
      allow create, update, delete: if isAdmin();
    }

    // Collection categories (si vous en avez)
    match /categories/{categoryId} {
      // Lecture : tout le monde
      allow read: if true;

      // Écriture : admin et dev uniquement
      allow write: if isAdmin();
    }
  }
}
